<div class='container'>
  <center>   <h2>Add New Program</h2>
  <div class ='col-md-6'>

    <%= form_tag "/code_programs" do %>

      <div>
        <%= label_tag :organization_name %>
        <%= text_field_tag :organization_name %>
      </div>

      <div>
        <%= label_tag :mission_description %>
        <%= text_area_tag :mission_description %>
      </div>

      <div>
        <%= label_tag :website %>
        <%= text_field_tag :website %>
      </div>

      <div>
        <%= label_tag :population_focus %>
        <%= text_area_tag :population_focus %>
      </div>

      <div>
        <%= label_tag :time_commitment %>
        <%= text_field_tag :time_commitment %>
      </div>

      <div>
        <%= label_tag :cost %>
        <%= text_field_tag :cost %>
      </div>

      <div>
        <%= label_tag :languages_courses %>
        <%= text_field_tag :languages_courses %>
      </div>

      <div>
        <%= label_tag :locations %>
        <%= text_field_tag :locations %>
      </div>
  </div>
  
  <div class='col-md-6'>
    <div>
      <%= label_tag :leadership_contact %>
      <%= text_field_tag :leadership_contact %>
    </div>

    <div>
      <%= label_tag :title %>
      <%= text_field_tag :title %>
    </div>

    <div>
      <%= label_tag :email %>
      <%= text_field_tag :email %>
    </div>

    <div>
      <%= label_tag :phone_number %>
      <%= text_field_tag :phone_number %>
    </div>

    <div>
      <%= label_tag :address %>
      <%= text_field_tag :address %>
    </div>

    <div>
      <%= label_tag :city %>
      <%= text_field_tag :city %>
    </div>

    <div>
      <%= label_tag :state %>
      <%= text_field_tag :state %>
    </div>

    <div>
      <%= label_tag :zip %>
      <%= text_field_tag :zip %>
    </div>

    <div>
      <%= label_tag :when_founded %>
      <%= text_field_tag :when_founded %>
    </div>

    <div>
      <%= label_tag :keywords %>
      <%= text_area_tag :keywords %>
    </div>
  </div>
  </center>
  
  <center>
  <div class='col-md-12'>
    <%= submit_tag "Add New Coding Program", class: 'new_program' %>
    <% end %>
  </div>
  </center>
</div>
